<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Add data binding-->
    <data>
        <import type="br.com.hussan.githubapi.utils.DateUtils" />
        <!-- define variable -->
        <variable
            name="repo"
            type="br.com.hussan.githubapi.data.models.Repository" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:loadImage="@{repo.owner.avatarUrl}" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="4.5"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@{repo.name != null ? repo.name : @string/app_name}"
               android:textAppearance="?android:attr/textAppearanceMedium" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@{DateUtils.formatDate(repo.pushedAt)}"
               android:textAppearance="?android:attr/textAppearanceSmall" />
       </LinearLayout>

        <!-- Include layouts -->
        <include
            layout="@layout/forks_items"
            app:repo="@{repo}" />

    </LinearLayout>
</layout>